/* pages/payment/payment.wxss */
page{
  background: #f0f0f0;
}
.main{
  width: 100%;
  height: auto;
}
.first{
  width: 96%;
  height: 150rpx;
  margin: 0 auto;
  background: #fff;
  border-top: 20rpx solid #f0f0f0;
  border-radius: 10rpx;
}
.column{
  width: 100%;
  height: 76rpx;
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}
.inform{
  margin-left: 3%;
  display: inline-flex;
  align-items: center;
}
.repastNum{
  font-size: 30rpx;
  color: #000;
}
.remarks{
  font-size: 30rpx;
  color: #161616;
}
.arrow{
  width: 35%;
  display: inline-flex;
  justify-content: flex-end;
  align-items: center;
  color: #999999;
  font-size: 24rpx;
}
.arrow image{
  width: 30rpx;
  height: 30rpx;
  transform: rotate(180deg);
  margin: 0 3% ;
}

.second{
  width: 96%;
  background: #fff;
  font-size: 30rpx;
  color: #161616;
  border-top: 20rpx solid #f0f0f0;
  border-radius: 10rpx;
  margin: 0 auto;
}
 .list{
  width: 100%;
  height: 320rpx;
  background: #fff;
} 
.storename{
  width: 100%;
  height: 66rpx;
  display: inline-flex;
  align-items: center;
  border-bottom: 1rpx solid #f1f1f1;
}
.storename image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx 0 2%;
}

.columns{
  width: 100%;
  height: 96rpx;
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
}
.total {
  background-color:#000;
 color: white;
  text-align: center;
  text-decoration: none;
  display: inline-table;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 70%;
  height: 100%;
  line-height: 100rpx;
}
.button{
 color: #777;
}
.button-red {
  background-color: #ff0000; /* 黑色 */
  width: 30%;
}
.comment{
  color: rosybrown;
  font-size: 32rpx;
}

button{
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-table;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.menu{
  width: 60%;
  display: inline-flex;
  align-items: center;
  margin-left: 5%;
}
.food_pic{
  width: 120rpx;
  height: 66rpx;
   
}
.food_pic image{
  width: 100rpx;
  height: 66rpx;
}
.infor{
  width: 50%;
  height: 100%;
}
.dishes{
  color: #161616;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.number{
  color: #666666;
  font-size: 20rpx;
}
.arrows{
  width: 30%;
  height: auto;
  display: inline-flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 5%;
  color: #ff0000;
  font-size: 36rpx;
}
.button_open{
  width: 150rpx;
  height: 40rpx;
  border: 1rpx #777 solid;
  border-radius: 10rpx;
  margin: 20rpx auto 40rpx auto;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 40rpx;
}
.button_open image{
  width: 20rpx;
  height: 20rpx;
  transform: rotate(-90deg);
}
.button_stop{
  width: 150rpx;
  height: 40rpx;
  border: 1rpx #777 solid;
  border-radius: 10rpx;
  margin: 20rpx auto 40rpx auto;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 40rpx;
  position: fixed;
  bottom: 7%;
  left: 40%;
}
.button_stop image{
  width: 20rpx;
  height: 20rpx;
  transform: rotate(90deg);
}

.pays{
  width: 100%;
  height: 60rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.pay{
  line-height: 60rpx;
  font-size: 24rpx;
  color: #333;
  margin-left: 5%;
}
.circular{
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid #dcdcdc;
  border-radius: 25rpx;
  margin-right: 5%;
}
.circular_hover{
  width: 40rpx;
  height: 40rpx;
  background-size: 100% auto;
  border-radius: 25rpx;
  margin-right: 5%;
  border: 0;
}
.circular:hover{
  width: 40rpx;
  height: 40rpx;
  background-size: 100% auto;
  border-radius: 25rpx;
  margin-right: 5%;
  border: 0;
}
.icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.icon image{
  width: 40rpx;
  height: 40rpx;
}
.shopping{
  background: #fff;
  border: 0;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 96rpx;
}
.cart{
  display: inline-flex;
  align-items: center;
  margin-left: 5%;
}
.all{
  color: #161616;
  font-size: 24rpx;
}
.settlement{
  margin: 0;
  font-size: 36rpx;
}
.rectangle{
  display: inline-flex;
}
.notice{
  width: 170rpx;
  background:  #000;
  color: #fff;
  font-size: 32rpx;
  line-height: 96rpx;
  text-align: center;
}