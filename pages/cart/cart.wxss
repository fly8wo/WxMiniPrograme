/* pages/cart/cart.wxss */
.cart_header{
  width: 100%;
  height: 50%;
  background: #000;
  opacity: 0.7;
}
.cartwindow{
  width: 100%;
  height: 50%;
  background: #f9f9f9;
  position: fixed;
  
  z-index: 999;
}
.cartwindow_top{
  width: 100%;
  height: 80rpx;
  background: #f1f1f1;
}
.cartimg{
  width: 40rpx;
  height: 50%;
  margin: 0 auto;
}
.cartimg image{
  width: 40rpx;
  height: 40rpx;
  transform: rotate(-90deg);
  
}
.emptycart{
  font-size: 24rpx;
  color: #999;
  margin: 0 3% 0 80%;
}
.orderlist{
  width: 100%;
  height: 96rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.order{
  width: 94%;
  height: 100%;
  margin: 0 0 0 3%;
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
}
.left_name{
  font-size: 30rpx;
  color: #333;
}
.right_price{
  width: 40%;
  height: auto;
  display: inline-flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
  color: #333;
}

/*这是数量  */
.cartnumber{
  width: 70%;
  height: auto;
  display: inline-flex;
  justify-content: flex-end;
  align-items: center;
}
.cartnumber image{
  width: 45rpx;
  height: 45rpx;
}
.addAnimation{
  width: 10px;
  height: 10px;
  position: fixed;
  background-color: red;
  border-radius:15px 15px;
  z-index: 999999;
}